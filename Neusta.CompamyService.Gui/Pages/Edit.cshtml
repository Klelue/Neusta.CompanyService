@model Neusta.CompamyService.Gui.CompanyServiceApi.CompanyDto
@{
}

<div class="modal fade" tabindex="-1" role="dialog" id="details-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Company</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @(Model.Id)
                
                <form asp-page-handler="Delete" method="post">
                    <input type="hidden" name="companyId" value="@Model.Id"/>
                    <button class="btn btn-default">Löschen</button>
                </form>
            </div>
        </div>
    </div>
</div>