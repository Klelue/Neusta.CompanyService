@using Neusta.CompamyService.Gui.CompanyServiceApi
@model Neusta.CompamyService.Gui.CompanyServiceApi.CompanyAttributeDto

<div class="modal fade" tabindex="-1" role="dialog" id="details-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Attribut</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h2 class="text-center">Attribute bearbeiten</h2>
                
                <form asp-page-handler="UpdateAttribute" method="post">
                    <div class="form-group">
                        <input type="text" id="attributeName" name="attributeName" value="@(Model.Name)"/>
                        <label for="attributeName">Bezeichnung des Attributes</label>
                    </div>
                    
                    <input id="companyVisible" type="checkbox" checked=@(!Model.Visible)>
                </form>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <button type="button" class="btn btn-primary" onclick="('#attributeName').submit()">Attribut hinzufügen</button>
                        </div>
                        <div class="col">
                            <button type="button" class="btn btn-primary" 
                                    onclick="PostData('@Url.Page("Index", "DeleteAttribute")', {attributeId : @(Model.Id)} )">
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>