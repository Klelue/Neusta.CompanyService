@using Neusta.CompamyService.Gui.CompanyServiceApi
@model Neusta.CompamyService.Gui.Models.TableValues

<div class="modal fade" tabindex="-1" role="dialog" id="details-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Company</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h2 class="text-center">Attribut hinzufügen</h2>


                <form id="companyForm" asp-page-handler="Update" method="post">
                    @foreach (CompanyAttributeDto attribute in Model.Attributes )
                    {
                    <div class="form-group">
                        <input type="text" id="valueName" name="valueName" value="" />
                        <label for="valueName">@(attribute.Name)</label>
                    </div>
                    }
                </form>
            </div>

            <div class="modal-footer">
                <div class="row">
                    <div class="col">
                        <button type="button" class="btn btn-primary"
                                onclick="PostData('@Url.Page(" Index", "DeleteAttribute" )', ' ' )">
                        </button>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-primary" onclick="('#companyForm').submit()">Company updaten</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
