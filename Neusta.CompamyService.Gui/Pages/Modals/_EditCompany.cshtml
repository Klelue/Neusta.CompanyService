@using Neusta.CompamyService.Gui.CompanyServiceApi
@model Neusta.CompamyService.Gui.Models.EditCompanyModel


<h2 class="text-center">Company bearbeiten</h2>
<form id="companyForm" asp-page-handler="Update" method="post">
    <input type="hidden" asp-for="Company.Id"/>

    @for (var index = 0; index < Model.Attributes.Count; index++)
    {
        var attribute = Model.Attributes[index];
        var valueNameString = "";
        if (Model.Company.CompanyAttributeValues != null)
        {
            var value = Model.Company.CompanyAttributeValues.FirstOrDefault(v => v.CompanyAttributeId == attribute.Id);
            if (value != null)
            {
                valueNameString = value.Value;
            }
        }

        <div class="form-group">
            <div class="row">
                <div class="col">
                    <label for="valueName">@(attribute.Name)</label>
                </div>
                <div class="col">
                    <input type="text" asp-for="Company.CompanyAttributeValues[index].Value"/>
                    <input type="hidden" asp-for="Company.CompanyAttributeValues[index].CompanyAttributeId" value="@(attribute.Id)"/>
                    <input type="hidden" asp-for="Company.CompanyAttributeValues[index].CompanyId" value="@(Model.Company.Id)"/>
                </div>
            </div>
        </div>
    }

    <div class="form-group" align="center">
        <label asp-for="Company.Visible">Sichtbar <span class="bi-eye" aria-hidden="true"></span></label>
        <input asp-for="Company.Visible" type="checkbox">
    </div>
</form>

<div class="row">
    <div class="col">
        <button type="button" class="btn btn-primary" data-dismiss="modal"
                onclick="PostData('@Url.Page("Index", "Delete")', { id: @(Model.Company.Id) })">
            Löschen
        </button>
    </div>
    <div class="col">
        <input type="submit" class="btn btn-primary" form="companyForm" value="Update"/>
    </div>
</div>